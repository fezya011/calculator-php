<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title ?? 'FlatCMS' }}</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fork-awesome@1.2.0/css/fork-awesome.min.css">
    <link href="/public/assets/front/css/layout.css" rel="stylesheet">
    <link href="/public/assets/front/css/sidebar.css" rel="stylesheet">
    <link href="/public/assets/front/css/header.css" rel="stylesheet">
    <link href="/public/assets/front/css/footer.css" rel="stylesheet">

    {% block styles %}{% endblock %}
</head>
<body>

<!-- Сайдбар и переключатели -->
{% include "/front/blocks/sidebar.twig" %}

<header class="header sticky-bar">
    {% block main_header %}
        {% include "/front/blocks/header.twig" %}
    {% endblock %}
</header>

<main class="main">
    <div class="main-content-wrapper">
        {% block page_header_and_breadcrumbs %}
        {% endblock %}

        {% block error %}
        {% endblock %}

        {% block content %}
        {% endblock %}
    </div>
</main>

{% include "/front/blocks/footer.twig" %}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Скролл эффект для хедера
    window.addEventListener('scroll', function() {
        const header = document.querySelector('.header.sticky-bar');
        if (window.scrollY > 20) {
            header.classList.add('scrolled');
        } else {
            header.classList.remove('scrolled');
        }
    });
</script>

{% block scripts %}{% endblock %}
</body>
</html>