        {% if current_category %}
            <div class="category-tag">{{ current_category }}</div>
        {% endif %}
    </header>
{% endblock %}

{% block content %}
    <div class="articles-band">
        {% if articles %}
            {% for article in articles %}
                <div class="article-item {% if loop.first %}featured-article{% endif %}">
                    <a href="/article/{{ article.slug|e }}" class="article-card">
                        {% if article.meta.cover_image %}
                            <div class="article-thumb" style="background-image: url({{ article.meta.cover_image|e }});"></div>
                        {% else %}
                            <div class="article-thumb" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"></div>
                        {% endif %}

                        <div class="article-content">
                            <div>
                                <h2>{{ article.meta.title|default(article.title)|e }}</h2>

                                {% if article.excerpt or article.content %}
